<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/item_border"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Cart ID:"
        android:textColor="#0E0D0D"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCart"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_toRightOf="@id/textView23"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0E0D0D"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tvCart"
        android:gravity="center"
        android:text="Total Uses:"
        android:textColor="#0E0D0D" />

    <TextView
        android:id="@+id/tvTotUse"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textView25"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0E0D0D" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tvTotUse"
        android:gravity="center"
        android:text="@string/current_status_"
        android:textColor="#0E0D0D" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textView27"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0E0D0D" />
</RelativeLayout>