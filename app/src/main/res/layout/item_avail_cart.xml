<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/item_border">


    <TextView
        android:id="@+id/tvCartId"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_below="@id/textView9"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#141313"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCartId"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/tvCartId"
        android:layout_toRightOf="@+id/tvCartId"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/tvSeats"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCartId"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/tvStatus"
        android:layout_toRightOf="@+id/tvStatus"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnRent"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/tvSeats"
        android:layout_toRightOf="@+id/tvSeats"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#030303" />

    <Button
        android:id="@+id/btnRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/user_button"
        android:text="Rent Cart"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCartId"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tvCartId"
        android:layout_toRightOf="@+id/tvCartId"
        android:gravity="center"
        android:text="@string/carts_status"
        android:textColor="#0A0A0A" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCartId"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/tvCartId"
        android:layout_toRightOf="@+id/tvCartId"
        android:gravity="center"
        android:text="Seats"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRent"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/tvCartId"
        android:layout_toRightOf="@+id/tvCartId"
        android:gravity="center"
        android:text="Location"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cart_id"
        android:textColor="#030303"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
